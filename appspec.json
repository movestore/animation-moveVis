    {
      "id": "map_token",
      "name": "Map service API key",
      "description": "API Key for your account with the given map service provider. The following services require API authorization: Stamen, Stadia, Thunderforest, Mapbox, MapTiler. If requesting a basemap from one of these providers, you must provide your API token here.",
      "defaultValue": null,
      "type": "SECRET"
    },
    {
      "id": "map_res",
      "name": "Resolution of background map",
      "description": "Select the resolution for your background map in the range between 0 and 1. Take into account the extent of your data set (i.e. high resolution is not necessary for far ranging data). Note that selection of a too high or too low value might lead to different error. Please try out different values if in doubt. Default 1.",
      "defaultValue": 1,
      "type": "DOUBLE"
    },
    {
      "id": "col_opt",
      "name": "Track colour option",
      "description": "Select how you want to colour your animated tracks.",
      "defaultValue": "one",
      "type": "RADIOBUTTONS",
      "options": [
        {
          "value": "one",
          "displayText": "Single colour (red) for all tracks"
        },
        {
          "value": "trackid",
          "displayText": "Coloured by track ID"
        },
        {
          "value": "other",
          "displayText": "Coloured by event or track attribute (define below)"
        }
      ]
    },
    {
      "id": "colour_paths_by",
      "name": "Attribute for track colouring",
      "description": "Insert the exact spelling of the event or track attribute that you want to use to colour your animated tracks. Check the previous App's data overview for available attributes and their spelling. If you opt to include a legend, it will show the values of the attribute that correspond to each colour.",
      "defaultValue": "",
      "type": "STRING"
    },
    {
      "id": "path_legend",
      "name": "Include legend",
      "description": "Indicate if a legend identifying the track colours should be included in the output map.",
      "defaultValue": true,
      "type": "CHECKBOX"
    },
    {
      "id": "caption",
      "name": "Caption",
      "description": "Insert a caption text that will be displayed at the bottom of the visualisation window. Typically this is the data reference.",
      "defaultValue": " ",
      "type": "STRING"
    },
    {
      "id": "file_format",
      "name": "Output file format",
      "description": "Select an output file format from the below options. The file extension must correspond to a file format known by the available renderers of the system on which the video will be run.",
